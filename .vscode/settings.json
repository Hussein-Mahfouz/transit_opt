{
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python"   // Black is called via Python extension
  },

  "python.formatting.provider": "black",           // tells Python extension to use Black
  "editor.codeActionsOnSave": {
    "source.fixAll": true,                         // Ruff fixes applied
    "source.organizeImports": true                 // imports sorted
  },

  "notebook.formatOnSave.enabled": true
}
